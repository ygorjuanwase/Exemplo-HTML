
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
</head>
<body>
    @Html.ActionLink("Nova recrutadora", "Cadastro", "Recrutadora", new {@class = "btn btn-primary"})
    
    <div> 
        <table class="table table-striped table-hover">
            <thead>
                <tr class="bg-primary text-white">
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ExemploMVC02.Models.Recrutadora recrutadora in @ViewBag.Recrutadoras)
                {
                    <tr>
                        <td>@recrutadora.Id</td>
                        <td>@recrutadora.Nome</td>
                        <td>@recrutadora.CPF</td>
                        <td><a href="/Recrutadora/Editar?id=@recrutadora.Id"class="btn btn-outline-success">
                           <i class="fa fa-check"></i>Editar</a>

                            
                            </a>
                            <a href="/Recrutadora/Excluir?id=@recrutadora.Id" class="btn btn-outline-danger">
                                <i class="fa fa-trash"></i>Excluir
                            </a>
                        </td>
                    </tr>
                } 
            </tbody>
            <tfoot>
                <tr class="bg-primary text-white">
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Ação</th>
            </tfoot>
        </table>
    </div>
</body>
</html>
